<% include ../partials/header %>

<div class="container">
	<div class="row">
		<h1 style="text-align: center;">Add New Comments to <%= campground.name %></h1>
		<div style="width: 30%; margin: 30px auto;">
			<form action='/campgrounds/<%= campground._id %>/comments' method='POST'>
				<div class="form-group">
					<input type="text" class="form-control" placeholder="text" name="comment[text]">
				</div>
				<div class="form-group">
					<input type="text" class="form-control" placeholder="author" name="comment[author]">
				</div>
				<div class="form-group">
					<button class="btn btn-lg btn-default btn-block btn-primary">Submit</button>
				</div>
			</form>
			<a href="/campgrounds">back.</a>
		</div>
	</div>
</div>

<% include ../partials/footer %>
