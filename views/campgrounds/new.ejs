<% include ../partials/header %>

<div class="container">
	<div class="row">
		<h1 style="text-align: center;">Create a New Campground</h1>
		<div style="width: 30%; margin: 30px auto;">
			<form action='/campgrounds' method='POST'>
				<div class="form-group">
					<input type="text" class="form-control" placeholder="name" name="name">
				</div>
				<div class="form-group">
					<input type="text" class="form-control" placeholder="image url" name="image">
				</div>
				<div class="form-group">
					<input type="text" class="form-control" placeholder="description" name="description">
				</div>
				<div class="form-group">
					<button class="btn btn-lg btn-default btn-block btn-primary">Submit</button>
				</div>
			</form>
			<a href="/campgrounds">back.</a>
		</div>
	</div>
</div>

